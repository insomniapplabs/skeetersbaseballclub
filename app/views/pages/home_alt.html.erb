<% if user_signed_in? %>
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="dashboard-header">
				<%= render 'partials/admin_dashboard_header' %>
			</div>
		</div>
	</div>
</div>
<% else %>

<div id="portal-wrap">

<div class="landing-page-top">
	<h1 class="landing-page">Skeeters Baseball Club</h1>
	<p class="text-center"><%= image_tag "skeeter_bw_350.png" %></p>
	<div class="container">
		<div class="row">
			<div class="col-md-12 text-center">
			
				<h3 class="member-login-text">Member Login:</h3>
				<div class="login-form-box">
					<%= form_for(resource, :as => resource_name, html: {class: "form-inline-login"}, :url => session_path(resource_name)) do |f| %>
					

					<div class="form-group">
						<label class="sr-only" for="exampleInputEmail2">Email address</label>
						<%= f.email_field :email, :autofocus => true, class: "form-control", id: "dark-input", placeholder: "Enter email", autocomplete: "off" %>
					</div>
					<div class="form-group">
						<label class="sr-only" for="exampleInputPassword2">Password</label>
						<%= f.password_field :password, class: "form-control", id: "dark-input", placeholder: "Password", autocomplete: "off" %>
					</div>
					<%= f.submit "Sign In", class: "btn-secondary btn-primary btn-secondary" %>
					<% end %>
					<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
 					<p><%= link_to "Forgot your password?", new_password_path(resource_name) %></p>
					<% end -%>
				</div>
			</div>
		</div>
	</div>
</div>

</div>


<% end %>